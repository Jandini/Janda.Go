{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["Common/Console/Go"],
  "name": "Console Go",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "Console Go provides startup solution for console application with dependency injection, logging, and configuration.",
  "groupIdentity": "go",
  "precedence": "4000",
  "identity": "Console.Go",
  "shortName": "consolego",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ConsoleGo",
  "preferNameDirectory": true,
  "constraints": {
    "sdk-only": {
      "type": "host",
      "args": [
        {
          "hostname": "dotnetcli",
          "version": "6.0.*"
        },
        {
          "hostname": "dotnetcli",
          "version": "7.0.*"
        }
      ]
   }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".vs/**",
            ".git/**",
            "/**/obj/**",
            ".nuspec"
          ]
        },
        {
          "condition": "(!allFeatures)",
          "exclude": [
            ".github/**/*",
            "src/ConsoleGo/appsettings.json",
            "src/ConsoleGo/Extensions.cs",
            "src/ConsoleGo/Options.cs",
            "src/ConsoleGo/Settings.cs",
            "src/ConsoleGo/Properties/*"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "name": {
      "type": "parameter",
      "replaces": "ConsoleGo",
    },
    "allFeatures": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add all features including Serilog"
    },
    "useSerilog": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Use Serilog"
    }
  }
}